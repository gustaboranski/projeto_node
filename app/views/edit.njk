{% extends "layout.njk" %}

{% block pagina %}
<h1>Alteração	de	Música</h1>
<div	class="col-md-6">
		<form method="post" action="/edit/{{musica.id}}">
		<input type="hidden" name="_method" value="PUT" >
				<div	class="form-group">
						<label>Id</label>
						<p class="form-control" id="nome" disabled >{{musica.id}}</p>
				</div>
				<div class="form-group">
						<label for="nome">Nome da musica</label>
						<input	type="text" class="form-control" name="nome" id="nome" value="{{musica.nome}}" required>
				</div>
				<div	class="form-group">
						<label	for="artista">Nome	do	artista</label>
						<input	type="text" class="form-control" name="artista" id="artista" value="{{musica.artista}}" require requiredd>
				</div>
				<div	class="form-group">
						<label	for="estrelas">Total	de	estrelas</label>
						<input	type="text" class="form-control" name="estrelas" id="estrelas" value="{{musica.estrelas}}" required>
				</div>
				<button	type="submit" class="btn btn-primary">Alterar	Música</button>
				<a	href="/" class="btn	btn-default">Voltar</a>
		</form>
{% endblock %}
